/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 100rpx;
}
.article{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 80rpx;
}
.article > button{
  width: 60%;
}
.art-info{
  font-size: 30rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #666;
}
.art-info > icon{
  margin-right: 10rpx;
}

.warn{
  font-size: 20rpx;
  color: #ccc;
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 20rpx 10% 40rpx;
}